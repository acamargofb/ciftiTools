% Please edit documentation in R/plot.cifti.R
\name{plot.cifti}
\alias{plot.cifti}
\title{Visualize cifti brain data}
\usage{
\method{plot}{cifti}(cifti, brainstructure, mesh_left = NULL,
  vertices_left = NULL, faces_left = NULL, mesh_right = NULL,
  vertices_right = NULL, faces_right = NULL, structural_img = "MNI",
  w = 1, plane = "axial", num.slices = 12, use_papaya = FALSE)
}
\arguments{
\item{cifti}{Object of class 'cifti'. See \code{help(cifti_read_separate)}.}

\item{brainstructure}{'left', 'right', 'surface' or 'subcortical'.}

\item{mesh_left}{If brainstructure is 'left' or 'surface', an inla.mesh object for the left hemisphere.  (Provide mesh_left OR vertices_left and faces_left, but not both.)}

\item{vertices_left}{If brainstructure is 'left' or 'surface', the Vx3 matrix of surface vertices for the left hemisphere. (Provide mesh_left OR vertices_left and faces_left, but not both.)}

\item{faces_left}{If brainstructure is 'left' or 'surface', the Wx3 matrix of triangle membership for the left surface vertices. (Provide mesh_left OR vertices_left and faces_left, but not both.)}

\item{mesh_right}{If brainstructure is 'right' or 'surface', an inla.mesh object for the right hemisphere. (Provide mesh_right OR vertices_right and faces_right, but not both.)}

\item{vertices_right}{If brainstructure is 'right' or 'surface', the Vx3 matrix of surface vertices for the right hemisphere.(Provide mesh_right OR vertices_right and faces_right, but not both.)}

\item{faces_right}{If brainstructure is 'right' or 'surface', the Wx3 matrix of triangle membership for the right surface vertices. (Provide mesh_right OR vertices_right and faces_right, but not both.)}

\item{structural_img}{If brainstructure is 'subcortical', the file name of the structural MRI image on which to overlay the subcortical values.  The MNI template is used by default.  Set to NULL to use a blank image.}

\item{w}{The time/column index of the cifti data to plot.}

\item{plane}{If brainstructure is 'subcortical', the plane to display.  Default is 'axial'. Other options are 'sagittal' and 'coronal'.}

\item{num.slices}{If brainstructure is 'subcortical', the number of slices to display.  Default is 'axial'. Other options are 'sagittal' and 'coronal'.}

\item{use_papaya}{If brainstructure is 'subcortical', papaya=TRUE will use papayar to allows for interactive visualization.}
}
\description{
Visualize cifti brain data
}
